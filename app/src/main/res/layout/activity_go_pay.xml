<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shoping="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context="com.young.shopping.GoPayActivity">

    <com.young.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        shoping:titleBarTitle="选择付款方式"
        shoping:titleBarColor="@color/black"
        shoping:titleBarLeftImage="@drawable/nav_back"

        />
    <View style="@style/bg_line"/>
    <LinearLayout
        android:id="@+id/gopay_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="6dp"
                android:text="商品金额"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/gopay_prodmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥480.00"
                android:layout_centerVertical="true"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:id="@+id/gopay_servicemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="服务"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥0.00"
                android:layout_centerVertical="true"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:id="@+id/gopay_yunfumoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="运费"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥0.00"
                android:layout_centerVertical="true"
                android:textColor="@color/text_clo"
                android:textSize="14sp"/>/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:id="@+id/gopay_youhuimoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="优惠"
                android:paddingBottom="6dp"
                android:textColor="#FFBB55"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥0.00"
                android:layout_centerVertical="true"
                android:textColor="#FFBB55"
                android:textSize="14sp"/>

        </RelativeLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="实付"
                android:textColor="@color/text_clo"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/gopay_shifumoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥480.00"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:textSize="18sp"/>/>

        </RelativeLayout>
        <View style="@style/bg_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="请选择支付方式"
                android:textColor="@color/border_clo"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
        <!--<RadioGroup-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"></RadioGroup>-->
        <RelativeLayout
            android:id="@+id/gopay_rl_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:id="@+id/gopay_alipay"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/alipay"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gopay_alipay"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textSize="18sp"
                    android:textColor="@color/text_clo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐已安装支付宝客户端的用户使用"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/border_clo"/>

            </LinearLayout>
            <!--<ImageView-->
                <!--android:id="@+id/gopay_select_alipay"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:padding="6dp"-->
                <!--android:src="@drawable/succeed"/>-->
            <RadioButton
                android:id="@+id/gopay_select_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="6dp" />

        </RelativeLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
        <RelativeLayout
            android:id="@+id/gopay_rl_weixinpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:id="@+id/gopay_weixinpay"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wechat"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gopay_weixinpay"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="18sp"
                    android:textColor="@color/text_clo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐已安装微信客户端的用户使用"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/border_clo"/>

            </LinearLayout>
            <!--<ImageView-->
                <!--android:id="@+id/gopay_select_weixin"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:padding="6dp"-->
                <!--android:src="@drawable/select_all_gray"/>-->
            <RadioButton
                android:id="@+id/gopay_select_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="6dp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/gopay_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_green"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:text="确认支付"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    <View style="@style/bg_line"/>

</LinearLayout>
